{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@orm/*": [
        "orm/*"
      ],
      "@models/*": [
        "orm/models/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
    },
    "baseUrl": "./src",
  },
  "include": [
    "src/**/*",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}